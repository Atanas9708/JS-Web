<form method="post" class="form center-form" enctype=multipart/form-data>
    <div class="car">
        <img class="carPoster" src="{{car.image}}" />
    </div>
    <h1>Brand: {{car.brand}}</h1>
    <h1>Model: {{car.model}}</h1>
    <h1>Price per day: {{car.pricePerDay}}$</h1>
    
    <label for="daysToRent">Days to rent</label>
    <input id="daysToRent" name="daysToRent" type="number" step="0.01" min="0" class="input-field" required/><br>

    <input type="submit" value="Rent" class="btn btn-small btn-success"/>

</form>