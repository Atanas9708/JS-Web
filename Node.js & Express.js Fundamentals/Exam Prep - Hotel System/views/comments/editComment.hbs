<div class="login-page">
    <h2>Edit comment</h2>
    <div class="form">
        <form action="/edit/comment?content={{comment.content}}&id={{comment._id}}" method="POST" class="create-form">
            <input type="text" name='title' value="{{comment.title}}" />
            <textarea name="comment" id="" cols="35" rows="10">{{comment.content}}</textarea>
            <br>
            <button type="submit">Edit</button>
        </form>
    </div>
</div>