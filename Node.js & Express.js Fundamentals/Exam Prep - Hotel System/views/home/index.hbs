<h1 >Home Page</h1>
<br>
<div class="hotels">

    {{#each hotels}}
    <div class="hotelPoster">
        <a href="/details?id={{this._id}}">

            <h2>Title: {{this.title}}</h2>
            <h2>Location: {{this.location}}</h2>
            <img class="hotelImg" src="{{this.image}}" alt="hotel image">
            <p>Description: {{this.description}}</p>
            {{#if this.user.isAdmin}}
            <a href="/hotel/edit/{{this._id}}">
                <button class="button-edit" type="submit">Edit</button>
            </a>
            <a href="/hotel/delete/{{this._id}}">
                <button class="button-delete" type="submit">Delete</button>
            </a>
            {{/if}}

        </a>
    </div>
    {{/each}}

</div>