<div class="login-page">
  <div class="form">
    <form action="/addHotel" method="POST" class="create-form">
      <input type="text" name='title' placeholder="Title" />
      <input type="text" name='location' placeholder="Location" />
      <input type="text" name='image' placeholder="Image Url" />

      <select class='picker' name="type">
        {{#each categories}}
        <option value="{{this.categoryName}}">{{this.categoryName}}</option>
        {{/each}}
      </select>
      <br>
      <br>
      <textarea name="textArea" id="" cols="35" rows="10" placeholder="description"></textarea>
      <br>

      <button type="submit">Create</button>
    </form>
  </div>
</div>