<h1>All hotels</h1>
<div class="hotels">
    {{#each hotels}}
    <div class="hotelPoster">
        <a href="/details?id={{this._id}}">
            <h2>Title: {{this.title}}</h2>
            <h2>Location: {{this.location}}</h2>
            <img class="hotelImg" src="{{this.image}}" alt="hotel image">
            <p>Description: {{this.description}}</p>
            <a href="like/{{this._id}}">
                <img class="likeBtn" src="/img/like-button-png-2.png" alt="like">
            </a>
            <span>{{this.likeCounter.length}}</span>
            <p>Views: {{this.viewCounter}}</p>
            {{#if this.user.isAdmin}}
            <a href="/hotel/edit/{{this._id}}">
                <button class="button-edit" type="submit">Edit</button>
            </a>
            <a href="/hotel/delete/{{this._id}}">
                <button class="button-delete" type="submit">Delete</button>
            </a>
            {{/if}}
        </a>
    </div>
    {{/each}}
</div>

<a href="/list?page={{pages.prevPage}}">
    <button>Prev</button>
</a>
<a href="/list?page={{pages.nextPage}}">
    <button>Next</button>
</a>