<h1>Welcome to Doner Place!</h1>
<p>We offer a wide variety of tasty doner kebab, cutosmized to your liking. Choose from different sizes of chicken, beef and
    lamb and any topping you want. Place your order now!</p>
<div class="products">
    {{#if chickenProducts}}
    <h2>Chicken Doner</h2>
    {{#each chickenProducts}}
    <div class="product-card">
        <img src="{{this.image}}">
        <a href="customize-order/{{this._id}}" class="button product-title">Order</a>
    </div>
    {{/each}} 
    {{/if}} 
    {{#if beefProducts}}
    <h2>Beef Doner</h2>
    {{#each beefProducts}}
    <div class="product-card">
        <img src="{{this.image}}">
        <a href="customize-order/{{this._id}}" class="button product-title">Order</a>
    </div>
    {{/each}} 
    {{/if}} 
    {{#if lambProducts}}
    <h2>Lamb Doner</h2>
    {{#each lambProducts}}
    <div class="product-card">
        <img src="{{this.image}}">
        <a href="customize-order/{{this._id}}" class="button product-title">Order</a>
    </div>
    {{/each}} 
    {{/if}}
</div>