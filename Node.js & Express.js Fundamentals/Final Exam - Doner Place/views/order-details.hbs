<h1></h1>
    Order details</h1>
<div class="catalog">
    <div class="column">
        <img src="static/img/chicken-21.png">
    </div>
    <div class="column">
        <h2>{{product.category}} donner, {{product.size}}cm</h2>
        <h3>From {{order.date}}</h3>
        <div class="toppings">
            {{#each order.toppings}}
                {{this}}
                <br>
            {{/each}}
        </div>
    </div>
    <div class="status">
        <div class="status-block">
            <span class="progress-right"></span>
            <span class="{{isPending}}"></span>
            <br> Pending
        </div>

        <div class="status-block">
            <span class="progress-left"></span>
            <span class="progress-right"></span>
            <span class="{{inProgress}}"></span>
            <br> In progress
        </div>
        <div class="status-block">
            <span class="progress-left"></span>
            <span class="progress-right"></span>
            <span class="{{inTransit}}"></span>
            <br> In transit
        </div>
        <div class="status-block">
            <span class="progress-left"></span>
            <span class="{{isDelivered}}"></span>
            <br> Delivered
        </div>
    </div>
</div>